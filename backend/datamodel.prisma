type Board @pgTable(name: "board") {
  id: Int! @unique
  description: String
  event: Event @pgRelation(column: "event")
  lists: [List!]!
  title: String!
}

type Card @pgTable(name: "card") {
  id: Int! @unique
  createdAt: DateTime!
  description: String
  list: List @pgRelation(column: "list")
  order: Int!
  title: String!
  user: User @pgRelation(column: "user")
}

type Comment @pgTable(name: "comment") {
  id: Int! @unique
  content: String!
  createdAt: DateTime!
  event: Event @pgRelation(column: "event")
  user: User @pgRelation(column: "user")
}

type Event @pgTable(name: "event") {
  id: Int! @unique
  address1: String!
  address2: String
  address3: String
  boards: [Board!]!
  city: String!
  comments: [Comment!]!
  country: String!
  createdAt: DateTime!
  description: String
  entranceTax: Int
  eventAdmins: [EventAdmin!]!
  eventDate: DateTime!
  expenses: [Expense!]!
  imageLarge: String
  imageSmall: String
  reviews: [Review!]!
  state: String!
  title: String!
  zip: String!
}

type EventAdmin @pgTable(name: "eventAdmin") {
  id: Int! @unique
  event: Event @pgRelation(column: "event")
  permission: Permission @pgRelation(column: "permission")
  user: User @pgRelation(column: "user")
}

type Expense @pgTable(name: "expense") {
  id: Int! @unique
  amount: Float!
  createdAt: DateTime!
  description: String
  event: Event @pgRelation(column: "event")
  title: String!
  user: User @pgRelation(column: "user")
}

type List @pgTable(name: "list") {
  id: Int! @unique
  board: Board @pgRelation(column: "board")
  cards: [Card!]!
  createdAt: DateTime!
  description: String
  order: Int!
  title: String!
}

type Permission @pgTable(name: "permission") {
  id: Int! @unique
  eventAdmins: [EventAdmin!]!
  name: String!
}

type Review @pgTable(name: "review") {
  id: Int! @unique
  createdAt: DateTime!
  description: String
  event: Event @pgRelation(column: "event")
  rating: Int!
  user: User @pgRelation(column: "user")
}

type User @pgTable(name: "user") {
  id: Int! @unique
  cards: [Card!]!
  comments: [Comment!]!
  email: String! @unique
  eventAdmins: [EventAdmin!]!
  expenses: [Expense!]!
  firstName: String!
  lastName: String!
  password: String!
  phone: Int @default(value: 0)
  resetToken: String
  resetTokenExpiry: Float
  reviews: [Review!]!
  username: String! @unique
}
