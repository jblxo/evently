type Board @pgTable(name: "board") {
  id: Int! @unique
  description: String
  id_event: Event @pgRelation(column: "id_event")
  lists: [List!]!
  title: String!
}

type Card @pgTable(name: "card") {
  id: Int! @unique
  created_at: DateTime!
  description: String
  id_list: List @pgRelation(column: "id_list")
  id_user: User @pgRelation(column: "id_user")
  order: Int!
  title: String!
}

type Comment @pgTable(name: "comment") {
  id: Int! @unique
  content: String!
  created_at: DateTime!
  id_event: Event @pgRelation(column: "id_event")
  id_user: User @pgRelation(column: "id_user")
}

type Event @pgTable(name: "event") {
  id: Int! @unique
  address1: String!
  address2: String!
  address3: String!
  boards: [Board!]!
  budget: Int!
  city: String!
  comments: [Comment!]!
  country: String!
  description: String
  entrance_tax: Int
  event_admins: [Event_admin!]!
  event_creation: DateTime!
  event_date: DateTime!
  expenses: [Expense!]!
  image_large: String
  image_small: String
  rating: Int!
  reviews: [Review!]!
  state: String!
  title: String!
  zip: String!
}

type Event_admin @pgTable(name: "event_admin") {
  id: Int! @unique
  id_event: Event @pgRelation(column: "id_event")
  id_role: Role @pgRelation(column: "id_role")
  id_user: User @pgRelation(column: "id_user")
}

type Expense @pgTable(name: "expense") {
  id: Int! @unique
  amount: Float!
  created_at: DateTime!
  description: String
  id_event: Event @pgRelation(column: "id_event")
  id_user: User @pgRelation(column: "id_user")
  title: String!
}

type List @pgTable(name: "list") {
  id: Int! @unique
  cards: [Card!]!
  created_at: DateTime!
  description: String
  id_board: Board @pgRelation(column: "id_board")
  order: Int!
  title: String!
}

type Review @pgTable(name: "review") {
  id: Int! @unique
  created_at: DateTime!
  description: String
  id_events: Event @pgRelation(column: "id_events")
  id_user: User @pgRelation(column: "id_user")
  rating: Int!
}

type Role @pgTable(name: "role") {
  id: Int! @unique
  event_admins: [Event_admin!]!
  name: String!
}

type User @pgTable(name: "user") {
  id: Int! @unique
  cards: [Card!]!
  comments: [Comment!]!
  email: String! @unique
  event_admins: [Event_admin!]!
  expenses: [Expense!]!
  first_name: String!
  last_name: String!
  password: String!
  phone: Int @default(value: 0)
  reviews: [Review!]!
  username: String! @unique
}
